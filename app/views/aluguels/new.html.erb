<div id="wrap">
<br><br><br>
<h3><center>Novo Contrato: Aluguel</center></h3>

<%= simple_form_for @aluguel do |f| %>

    <%= f.simple_fields_for :document do |d| %>
        <%= d.input :name,
            label: 'Nome do Arquivo: ',
            placeholder: 'Digite o nome do arquivo',
            error: 'O Nome do arquivo é obrigatório' %>

        <%= d.input :tag,
            label: 'Tags de busca: ',
            placeholder: 'Por exemplo: compra e venda, autocad, maio de 2016',
            hint: 'As tags serão úteis na hora de buscar seus arquivos',
            error: 'tags são obrigatórias' %>

         <%= d.file_field :uploaded_file, 
         label: 'Selecione seu arquivo',
         hint: 'Apenas documentos do tipo pdf, word, txt sao permitidos',
         error: 'Arquivos são obrigatórios' %>
    <% end %>
    <br>
    <div class="field">
        <%= f.label :imovel,
        label: 'Tipo do imóvel'%>
        <br>
        <%= f.radio_button :imovel, 'Residencial'%> 
        <span class="label label-primary">Residencial</span>
        <%= f.radio_button :imovel, 'Comercial'%> 
        <span class="label label-warning">Comercial</span>

    </div>
    <br>
    <%= f.input :local,
        label: 'Endereço do imóvel: ',
        placeholder: 'Digite o local do imovel',
        error: 'O local é obrigatorio' %>

    <%= f.input :valor,
        label: 'Valor do Contrato: ',
        placeholder: 'Digite o valor',
        error: 'O valor é obrigatorio' %>

    <%= f.input :locador,
        label: 'Locador: ',
        placeholder: 'Digite o nome do locador',
        error: 'O locador é obrigatorio' %>

    <%= f.input :locatario,
        label: 'Locatário: ',
        placeholder: 'Digite o nome do locatário',
        error: 'O locatário é obrigatório' %>

    <br><br><br>
    <center>
         <button type="submit" class="btn btn-success">Salvar Documento</button>
        <%= link_to "Cancelar", :back, {:class=>"btn btn-default"} %>
    </center>

<% end %>
</div>