<h1 align="center"> Todos os usuarios no Sistema </h1>

<% @users.each do |user| %>

<ul class"listing">
	<div class="row">
		<div class="well col-md-4 col-md-offset-4">
		  <li><%= link_to gravatar_for(user), user_path(user) %></li>
		  <li class="title">
		  	<%= link_to user.username, user_path(user) %>
		  </li>
		  <li><%= pluralize(user.documents.count, "document") if user.documents %> </li>
		</div>
	</div>
</ul>
<% end %>