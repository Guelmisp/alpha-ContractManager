<!-- Section -->
<section>
	
	<!-- /Inicio Tabs -->
	<div class="tresColunas">

		<!-- Pastas -->
		<div class="col-md-3"> 
			<p>Pastas</p>
			<div class="divider"></div>
			<table class="table table-sm table-hover">
			  <thead>
			    <tr>
			      <th> </th>
			      <th>#</th>
			      <th>Nome</th>
			    </tr>
			  </thead>
			  <tbody>
			    <tr>
			      <td><span class="glyphicon glyphicon-folder-close" aria-hidden="true"></td>
			      <th scope="row">1</th>
			      <td>Contratos</td>
			    </tr>
			    <tr>
			      <td><span class="glyphicon glyphicon-folder-open" aria-hidden="true"></td>
			      <th scope="row">2</th>
			      <td>Pessoais</td>
			    </tr>
			    <tr>
			      <td><span class="glyphicon glyphicon-folder-close" aria-hidden="true"></td>
			      <th scope="row">3</th>
			      <td>Financeiro</td>
			    </tr>
			  </tbody>
			</table>
			<td><span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></td>
			<td><span class="glyphicon glyphicon-minus-sign" aria-hidden="true"></td>

		</div>
		<!-- /Pastas -->

		<!-- Documentos, Alertas e Upload -->
		<div class="col-md-6 box-shadow--2dp"> 
			<div class="tabbable"> <!-- Only required for left/right tabs -->
			  <ul class="nav nav-tabs nav-justified">
			    <li class="active"><a href="#tab1" data-toggle="tab">Docs</a></li>
			    <li><a href="#tab2" data-toggle="tab">Upload</a></li>
			  </ul>
			  <div class="tab-content">
			    
			    <!-- Documentos -->
			    <div class="tab-pane active" id="tab1">

			      <%= form_tag destroy_multiple_documents_path, method: :delete do %>

			      <%= render 'documents/index' %>
			      
			      <div align="right">
 				    <%= button_tag(type: 'submit', class: "btn btn-default") do %>
  				     <span class="glyphicon glyphicon-trash"></span> 
				    <% end %>
				  </div>
				<% end %>
			      
			     	
			    </div>
			    <!-- /Documentos -->

			    <!-- Upload -->
			    <div class="tab-pane" id="tab2">

			      <%= render 'documents/new' %>
			      
			    </div>
			    <!-- /Upload -->

			  </div>
			</div>
		</div>
		<!-- /Documentos, Alertas e Upload -->

		<!-- Edit and Share -->
		<div class="col-md-3" id="editDiv"> 
			
		</div>
		<!-- /Edit and Share -->

	</div>
	<!-- /Fim Tabs -->

</section>
<!-- /Section -->